"resource/layout/gamespage_details_subheader_labels.layout"
{
	controls
	{
		gameplayedheader { controlname="Label" style="headertext" labeltext="#steam_details_lastplayedheader" zpos="2" } //Last Played
		totalplaytimeheader { controlname="Label" style="headertext" labeltext="#steam_details_totalplaytimeheader_minutes" zpos="2" } //Total Time Played
	}
	
	styles
	{
		headertext
		{
			textcolor=Label
			font-family=semibold
			font-style=outerglow,uppercase;
			font-outerglow-color="TextD"
			font-outerglow-offset=1
			font-outerglow-filtersize=1
			padding-left=0
			padding-bottom=0
			padding-top=0
		}
	}
	
	layout
	{
		region { name="subheaderlabels" y=0 x=0 width=max height=max }
		place { control=totalplaytimeheader,gameplayedheader region=subheaderlabels dir=down spacing=-2 y=0 }
	}
}