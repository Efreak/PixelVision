"resource/layout/downloadspage.layout"
{
	controls
	{
		"DownloadsPage"
		{
			"ControlName"		"CDownloadsPage"
		}
		
		"panel_list"
		{
			style=ListPanel
		}
	}
	
	styles
	{
		ListPanel
		{
			render_bg
			{
				0="fill( x0, y0, x1, y1, PropertySheetBG )"
			}
			render
			{
				0="fill( x0 + 2, y0 + 0, x1 - 2, y0 + 1, PropertySheetBG )"
				
				// Outer Border
				1="fill( x0    , y0    , x1    , y0 + 1, ScreenB )"	// Top
				2="fill( x0    , y1 - 1, x1    , y1    , ScreenB )"	// Bottom
				3="fill( x0    , y0 + 1, x0 + 1, y1 - 1, ScreenB )"	// Left
				4="fill( x1 - 1, y0 + 1, x1    , y1 - 1, ScreenB )"	// Right
				
				// Inner Border
				5="fill( x0 + 1, y0 + 1, x1 - 1, y0 + 2, Black )"	// Top
				6="fill( x0 + 1, y1 - 2, x1 - 1, y1 - 1, Black )"	// Bottom
				7="fill( x0 + 1, y0 + 2, x0 + 2, y1 - 2, Black )"	// Left
				8="fill( x1 - 2, y0 + 2, x1 - 1, y1 - 2, Black )"	// Right
			}
		}
		
		ScrollBar
		{
			inset="3 2 -3 -2"
		}
	}
	
	layout
	{
		place { control="panel_list" width=max height=max margin=1 }
	}
}