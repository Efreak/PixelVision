"resource/layout/musicpage_details_album.layout"
{
	controls
	{
		AlbumTitleLabel { controlname="Label" style="AlbumTitleStyle" }
		ArtistLabel { controlname="Label" style="ArtistStyle" }
		CoverImage { controlname="ImagePanel" style="CoverStyle" scaling=fit}
		
		PlayTracksButton
		{
			controlname="Button"
			labeltext="#Music_Album_Details_PlayTracks"
			style="ActionButtonStyle"
			command="AlbumPlayTracksAction"
		}
		
		PlayTracksNextButton
		{
			controlname="Button"
			labelText="#Music_Album_Details_PlayTracksNext"
			style="AdditionalActionButtonStyle"
			command="AlbumPlayTracksNextAction"
		}
		
		AddTracksToQueueButton
		{
			controlname="Button"
			labelText="#Music_Album_Details_AddTracksToQueue"
			style="AdditionalActionButtonStyle"
			command="AlbumAddTracksToQueueAction"
		}
		
		ShowAlbumButton
		{
			controlname="Button"
			labeltext="#Music_Album_Details_ShowAlbum"
			style="AdditionalActionButtonStyle"
			command="AlbumShowAction"
		}
		
		PlayAlbumButton
		{
			controlname="Button"
			labeltext="#Music_Album_Details_Play"
			style="ActionButtonStyle"
			command="AlbumPlayAction"
		}
		
		PlayAlbumNextButton
		{
			controlname="Button"
			labelText="#Music_Album_Details_PlayNext"
			style="AdditionalActionButtonStyle"
			command="AlbumPlayNextAction"
		}
		
		AddAlbumToQueueButton
		{
			controlname="Button"
			labelText="#Music_Album_Details_AddToQueue"
			style="AdditionalActionButtonStyle"
			command="AlbumAddToQueueAction"
		}
		
		ShowAlbumInSystemButton
		{
			controlname="Button"
			labelText="#Music_Album_Details_ShowAlbumInSystem"
			style="AdditionalActionButtonStyle"
			command="AlbumShowAlbumInSystemAction"
		}
	}
	
	styles
	{
		CMusicPage_Details_Album
		{
			bgcolor=none
		}
		
		AlbumTitleStyle
		{
			padding-bottom=8
			padding-top=8
			padding-left=10
			padding-right=10
			font-size=30
			textcolor=Label
			font-family=basefont
			font-weight=400
			bgcolor=none
		}
		
		ArtistStyle
		{
			padding-bottom=10
			padding-top=10
			padding-left=10
			padding-right=10
			font-size=20
			textcolor=Text
			font-family=basefont
			font-weight=400
			bgcolor=none
		}
		
		TrackStyle
		{
			inset-left=20
			padding-bottom=10
			padding-top=0
			textcolor=Text2
			font-family=basefont
			font-weight=400
			bgcolor=none
			render_bg {}
			render
			{
				0="image( x0 + 3, y0 + 1, x1, y1, graphics/mBullet )"
			}
		}
		
		TrackStyle:hover
		{
			textcolor="text"
		}
		
		CoverStyle
		{
			render_bg
			{
				0="fill( x0 - 1, y0 - 1, x1 + 1, y1 + 1, black )"
			}
		}
		
		AdditionalActionButtonStyle
		{
			inset-left=20
			padding-right=0
			padding-left=-6
			padding-top=4
			padding-bottom=-4
			textcolor=Label
			render_bg {}
			render
			{
				0="image( x0 + 3, y0 + 8, x1, y1, graphics/harrow_hover )"
			}
		}
		
		AdditionalActionButtonStyle:hover
		{
			textcolor="labelfocus"
		}
		
		ActionButtonStyle
		{
			inset="71 0 0 0"
			font-size=16
			font-weight=400
			textcolor="Text"
			font-style=uppercase
			bgcolor=none
			render
			{
				1="image( x0 + 50, y0 + 10, x1, y1, graphics/mPlay )"
			}
			render_bg
			{
				0="fill( x0 + 1, y0 + 1, x1 - 1, y1 - 1, BlackTR )"
			}
		}
			
		ActionButtonStyle:hover
		{
			textcolor="highlight2r"
			render
			{
				0="image( x0 + 50, y0 + 10, x1, y1, graphics/mPlay_over )"
			}
			render_bg
			{
				0="fill( x0 + 1, y0 + 1, x1 - 1, y1 - 1, BlackTR2 )"
			}
		}
	}
	
	layout
	{
		region { name=bodyregion x=10 y=10 width=max height=max overflow=scroll-vertical }
		region { name=headerregion x=10 y=20 width=max height=max overflow=scroll-vertical }
		region { name=leftcolumn x=20 width=202 overflow=scroll-vertical }
		region { name=trackcolumn width=max overflow=scroll-vertical }
		
		place { control="CoverImage" align=top width=200 height=200 }
		
		place { control=AlbumTitleLabel,ArtistLabel,leftcolumn region=headerregion  dir=down }
		place { control=CoverImage,PlayTracksButton region=leftcolumn  dir=down start=ArtistLabel spacing=10 margin-left=1}
		place { control=PlayTracksButton region=leftcolumn dir=down start=CoverImage width=200 height=40 margin-top=10 }
		place { control=PlayAlbumButton region=leftcolumn dir=down start=PlayTracksButton width=200 height=40 }
		place { control=PlayTracksNextButton,AddTracksToQueueButton,PlayAlbumNextButton,AddAlbumToQueueButton,ShowAlbumButton,ShowAlbumInSystemButton region=leftcolumn	dir=down start=PlayAlbumButton }
		place { region=trackcolumn control=*MusicPageDetailsTrack dir=down start=ArtistLabel x=230 }
	}
}